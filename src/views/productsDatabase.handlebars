<h2>Inventario</h2>

<ul>

    <h2>Listado de productos</h2>

    {{#each products}}

    <li id="productItem">

        Nombre: {{title}} <br>
        Precio: ${{price}} <br>
        Categoria: {{category}} <br>
        ID: {{_id}} <br>
        Codigo: {{code}} <br>
    </li>

    {{/each}}
    
</ul>

<a href="/?page=1">Pág. 1</a>

{{#if hasPrevPage}}
    <a href="/?page={{prevPage}}">Pág. Ant.</a>
{{/if}}

{{#if hasNextPage}}
    <a href="/?page={{nextPage}}">Pág. Sig.</a>
{{/if}}

<a href="/?page={{totalPages}}">Últ. pág.</a>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>